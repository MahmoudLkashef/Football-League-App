<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/parent_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="@drawable/custom_btn"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/team1_display"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="manchester united"
            android:textColor="#131212"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/score1_display"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="0"
            android:textColor="#131212"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/underscore"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="-"
            android:textColor="#131212"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/score2_display"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="0"
            android:textColor="#131212"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/team2_display"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="manchester city"
            android:textColor="#131212"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/deleteMatch"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_close_24" />

    </LinearLayout>

</LinearLayout>